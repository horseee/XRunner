<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vuforia.samples.VuforiaSamples.ui.ActivityList.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#C9C9C9"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/image_bg"
            android:background="#C9C9C9" />
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/personal_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#218868"
            android:layout_below="@+id/image_bg">
            <TextView
                android:id="@+id/nv_username"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="@string/username"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/ct_username"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/nv_username" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#68d1b0"
                android:layout_below="@+id/nv_username"/>
            <TextView
                android:id="@+id/nv_level"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="Level"
                android:textSize="20sp"
                android:layout_below="@id/nv_username"/>
            <TextView
                android:id="@+id/ct_level"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/nv_username"
                android:layout_toRightOf="@+id/nv_level"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#68d1b0"
                android:layout_below="@+id/nv_level"/>
            <TextView
                android:id="@+id/nv_distance"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="Distance"
                android:textSize="20sp"
                android:layout_below="@id/nv_level" />
            <TextView
                android:id="@+id/ct_distance"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/nv_level"
                android:layout_toRightOf="@+id/nv_distance" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#68d1b0"
                android:layout_below="@+id/nv_distance"/>
            <TextView
                android:id="@+id/nv_age"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="Age"
                android:textSize="20sp"
                android:layout_below="@id/nv_distance" />
            <TextView
                android:id="@+id/ct_age"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/nv_distance"
                android:layout_toRightOf="@+id/nv_age" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#68d1b0"
                android:layout_below="@+id/nv_age"/>
            <TextView
                android:id="@+id/nv_gender"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="Gender"
                android:textSize="20sp"
                android:layout_below="@id/nv_age"/>
            <TextView
                android:id="@+id/ct_gender"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/nv_age"
                android:layout_toRightOf="@+id/nv_gender" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#68d1b0"
                android:layout_below="@+id/nv_gender"/>
            <TextView
                android:id="@+id/nv_history"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="History"
                android:textSize="20sp"
                android:layout_below="@id/nv_gender"/>
            <TextView
                android:id="@+id/ct_history"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_below="@id/nv_gender"
                android:layout_toRightOf="@+id/nv_history" />
        </RelativeLayout>
        <TextView
            android:id="@+id/nv_about"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-50dp"
            android:layout_marginLeft="180dp"
            android:text="About Us"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/nv_logout"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-50dp"
            android:layout_marginLeft="10dp"
            android:text="Log Out"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#C9C9C9">
        <com.vuforia.samples.VuforiaSamples.ui.ActivityList.ProgressBarView
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C9C9C9"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/task" />
        <Button
            android:id="@+id/button3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_marginTop="30dp"
            android:background="@drawable/gift" />
        <Button
            android:id="@+id/button1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_radius"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/run"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</android.support.v4.widget.SlidingPaneLayout>
